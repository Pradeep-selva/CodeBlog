<%- include('partials/header.ejs') %>


<div class="ui main text container segment">
    <div class="ui huge header">Edit Blog</div>
    <form action="/blogs/<%= blogs.id %>?_method=PUT" class="ui form" method="POST">
        
        <div class="field">
            <label for="">Title</label>
            <input type="text" placeholder="Title" name="title" value="<%= blogs.title %>">
        </div>
        <div class="field">
            <label for="">Image</label>
            <input type="text" placeholder="Image(url)" name="image" value="<%= blogs.image %>">
        </div>
        <div class="field">
            <label for="">Blog content</label>
            <textarea name="content" id="" cols="30" rows="10">
                <%= blogs.body %>
            </textarea>
        </div>
        <input type="submit" class="ui big black basic button">

    </form>
</div>

<%- include('partials/footer.ejs') %>